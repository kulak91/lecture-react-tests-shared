{
  "exclude": ["node_modules", "merge.js"],
  "compilerOptions": {
    "moduleResolution": "node",
    "types": ["node", "webdriverio/async", "@wdio/mocha-framework", "devtools"],
    "target": "es2017",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  }
}
